{
    "name": "icetea/icecube",
    "description": "Ice Component system for PHP, using IceCube",
    "keywords": [
        "IceTea",
        "icecube"
    ],
    "homepage": "https://github.com/icetea/icecube",
    "license": "MIT",
    "authors": [
        {
            "name": "KhanhIceTea",
            "email": "khanhicetea@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "icetea/icedom": "^1.0.0"
    },
    "suggest": {
        "illuminate/support": "Required for Laravel integration (^10.0|^11.0|^12.0)",
        "illuminate/console": "Required for Laravel artisan commands (^10.0|^11.0|^12.0)",
        "scssphp/scssphp": "Required for SCSS style compilation (^2.0)"
    },
    "require-dev": {
        "pestphp/pest": "^2.0|^3.0|^4.0",
        "laravel/pint": "^1.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "IceTea\\IceCube\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "IceTea\\IceCube\\Laravel\\IceCubeServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IceTea\\IceCube\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
